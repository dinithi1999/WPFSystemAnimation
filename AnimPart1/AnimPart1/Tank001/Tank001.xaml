<UserControl x:Class="AnimPart1.Tank001.Tank001"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AnimPart1.Tank001"
             Height="638" Width="564">
    <Grid x:Name="grid1" Margin="-4,36,434,462">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="258*"/>
        </Grid.ColumnDefinitions>

        <!-- TankColumn -->
        <Canvas x:Name="TankColumn" Margin="3,62,-214,-284" Grid.Column="1">
            <!-- Background image or other content can be managed here -->
        </Canvas>

        <!-- lightColumn positioned at the top-left of TankColumn -->
        <ContentControl x:Name="lightColumn" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />

        <!-- CameraColumn positioned at the top-right of TankColumn -->
        <ContentControl x:Name="CameraColumn" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" />
    </Grid>
</UserControl>
