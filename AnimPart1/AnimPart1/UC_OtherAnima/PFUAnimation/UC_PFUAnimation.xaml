<UserControl x:Class="AnimPart1.UC_OtherAnima.PFUAnimation.UC_PFUAnimation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimPart1.UC_OtherAnima.PFUAnimation" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave"
             MouseRightButtonDown="UserControl_MouseRightButtonDown"
             Focusable="True" 
             mc:Ignorable="d">

    <UserControl.InputBindings>
        <KeyBinding Key="L" Modifiers="Shift" Command="{x:Static local:UC_PFUAnimation.PFULighCommand}" />
        <KeyBinding Key="C" Modifiers="Shift" Command="{x:Static local:UC_PFUAnimation.PFUCameraCommand}" />
        <KeyBinding Key="E" Modifiers="Shift" Command="{x:Static local:UC_PFUAnimation.PFUOpenValveCommand}" />
        <KeyBinding Key="S" Modifiers="Shift" Command="{x:Static local:UC_PFUAnimation.PFUStartAimationCameraCommand}" />
    </UserControl.InputBindings>


    <UserControl.Resources>
        <ContextMenu x:Key="ContextMenu1">
            <MenuItem x:Name="menuItem1" Header="Light On" InputGestureText="Shift+L" Click="Option1_Click" Style="{StaticResource CustomMenuItemStyle}"/>
            <MenuItem x:Name="menuItem2" Header="Camera On" InputGestureText="Shift+C" Click="Option2_Click" Style="{StaticResource CustomMenuItemStyle}"/>
            <MenuItem x:Name="menuItem3" Header="Open Valve" InputGestureText="Shift+E" Click="Option3_Click" Style="{StaticResource CustomMenuItemStyle}"/>
            <MenuItem x:Name="menuItem4" Header="Start Stirring" InputGestureText="Shift+S" Click="Option4_Click" Style="{StaticResource CustomMenuItemStyle}"/>
        </ContextMenu>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <!-- Column 0: Width adjusts to content -->
            <ColumnDefinition Width="*" />
            <!-- Column 1: Takes up remaining space -->
        </Grid.ColumnDefinitions>

        <!-- Grid for the backgroundSvg -->
        <Grid x:Name="BackgroundGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Width ="280"  >

            <svgc:SvgViewbox x:Name="backgroundSvg"
                Stretch="Uniform"
                Visibility="Collapsed"
                   
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
               />

            <svgc:SvgViewbox x:Name="svgViewbox"
            Stretch="UniformToFill"
            HorizontalAlignment="Center"
            Width="220"
            Panel.ZIndex="0"
            VerticalAlignment="Center" Height="235" 
            />

              <svgc:SvgViewbox x:Name="svgViewboxValve"
              Stretch="None"
              HorizontalAlignment="Center"
              Panel.ZIndex="1"
              Margin="-70,180,0,0"                 
              VerticalAlignment="Center"
              />
      
            <!-- LightColumn positioned at the top-left of TankColumn -->
            <ContentControl x:Name="lightColumn"
                     HorizontalAlignment="Left"
                     Margin="0,0,0,0"
                     Panel.ZIndex="2"
                     VerticalAlignment="Top">
                <ContentControl.Effect>
                    <DropShadowEffect Color="Gray"
                               Direction="320"
                               ShadowDepth="1"
                               Opacity="0.3"/>
                </ContentControl.Effect>
            </ContentControl>

            <ContentControl x:Name="CameraColumn" HorizontalAlignment="Right" VerticalAlignment="Top" />

            <ContentControl x:Name="PadleColumn" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="310" Height="320"  Margin="-70,0,0,0" Panel.ZIndex="0"/>

        </Grid>


        <ContentControl Grid.Column="1" x:Name="labelColumn" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="150"  >

        </ContentControl>

        <ContentControl Grid.Column="1" x:Name="labelColumn2" HorizontalAlignment="Center" VerticalAlignment="Top" Height="150" Width="150" Margin="0,100,0,0"/>


    </Grid>
</UserControl>
