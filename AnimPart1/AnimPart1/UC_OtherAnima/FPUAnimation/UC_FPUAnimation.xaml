<UserControl x:Class="AnimPart1.UC_AncillaryAnima.FPUAnimation.UC_FPUAnimation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimPart1.UC_AncillaryAnima.FPUAnimation"
             mc:Ignorable="d" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave"
             MouseRightButtonDown="UserControl_MouseRightButtonDown"
             Width="800" Height="400"
             >
    <UserControl.Resources>
        <ContextMenu x:Key="ContextMenu1">
            <MenuItem Name="menuItem1" Header="Option 1" InputGestureText="Ctrl+L" Click="Option1_Click"/>
            <!-- Other MenuItems can be defined here -->
        </ContextMenu>

        <!-- Stirrer Rotation -->
        <Storyboard x:Key="RotateStirrerStoryboard"  >
            <DoubleAnimation 
            Storyboard.TargetName="stirrerRotateTransform"
            Storyboard.TargetProperty="Angle"
            From="0"
            To="180"
            Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Object 1 Rotation -->
        <Storyboard x:Key="Obj1StirringStoryBoard"  >
            <DoubleAnimation 
            Storyboard.TargetName="Obj1RotateTransform"
            Storyboard.TargetProperty="Angle"
            From="360"
            To="330"
            Duration="0:0:3.2">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Object 2 Rotation -->
        <Storyboard x:Key="Obj2StirringStoryBoard" >
            <DoubleAnimation 
            Storyboard.TargetName="Obj2RotateTransform"
            Storyboard.TargetProperty="Angle"
            From="360"
            To="345"
            Duration="0:0:3.5">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Object 3 Rotation -->
        <Storyboard x:Key="Obj3StirringStoryBoard" >
            <DoubleAnimation 
            Storyboard.TargetName="Obj3RotateTransform"
            Storyboard.TargetProperty="Angle"
            From="360"
            To="340"
            Duration="0:0:3.8">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Object 4 Rotation -->
        <Storyboard x:Key="Obj4StirringStoryBoard">
            <DoubleAnimation 
            Storyboard.TargetName="Obj4RotateTransform"
            Storyboard.TargetProperty="Angle"
            From="360"
            To="350"
            Duration="0:0:4.0">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>


