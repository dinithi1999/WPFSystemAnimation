        AutoReverse="False"
        Duration="0:0:8"/>
        </Storyboard>

        <Storyboard x:Key="pulse6Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulse6"
        Storyboard.TargetProperty="Y"
        From="0"
        To="1500"
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:8"/>
        </Storyboard>

        <Storyboard x:Key="pulse7Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulse7"
        Storyboard.TargetProperty="Y"
        From="0"
        To="1500" 
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:4"/>
        </Storyboard>

        <Storyboard x:Key="pulseX1Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulseX1"
        Storyboard.TargetProperty="X"
        From="0"
        To="380" 
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:3"/>
        </Storyboard>

        <Storyboard x:Key="pulseX2Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulseX2"
        Storyboard.TargetProperty="X"
        From="0"
        To="380" 
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:3"/>
        </Storyboard>

        <Storyboard x:Key="pulseX3Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulseX3"
        Storyboard.TargetProperty="X"
        From="0"
        To="60" 
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:1"/>
        </Storyboard>

        <Storyboard x:Key="pulseY1Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulseY1"
        Storyboard.TargetProperty="Y"
        From="0"
        To="100" 
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:1"/>
        </Storyboard>

        <Storyboard x:Key="blinkAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
        Storyboard.TargetName="svgViewBoxarrow"
        Storyboard.TargetProperty="Opacity"
        From="1.0"
        To="0.0"
        Duration="0:0:0.5"
        AutoReverse="True"/>
        </Storyboard>

    </UserControl.Resources>

    <Grid x:Name="MainGrid" Margin="0,234,-33,48" ContextMenu="{StaticResource ContextMenu1}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <svgc:SvgViewbox x:Name="pipe1"
            Stretch="Uniform"
            HorizontalAlignment="Left"
            Source="pack://application:,,,/UC_OtherAnima/Pipes/Images/yellowPipe.svg"
            Panel.ZIndex="0"
            VerticalAlignment="Top" Height="2268" Width="500" Margin="30,190,0,0"/>

        <svgc:SvgViewbox x:Name="svgViewboxPulse1"
            Stretch="Uniform"
            HorizontalAlignment="Left"
            Source="pack://application:,,,/UC_OtherAnima/Pipes/Images/yellowPulse.svg"
            Panel.ZIndex="1"
            VerticalAlignment="Top" Width="11" Margin="30,250,0,0">
            <svgc:SvgViewbox.RenderTransform>
