<UserControl x:Class="AnimPart1.UC_OtherAnima.Pipes.UserControlPipes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimPart1.UC_OtherAnima.Pipes"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             MouseRightButtonDown="UserControl_MouseRightButtonDown" 
             mc:Ignorable="d">

    <UserControl.Resources>

        <ContextMenu x:Key="ContextMenu1">
            <MenuItem x:Name="menuItem1" Header="Close FPU Valve" Click="Option1_Click" Style="{StaticResource CustomMenuItemStyle}"/>
        </ContextMenu>

        <Storyboard x:Key="pulse1Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulse1"
        Storyboard.TargetProperty="Y"
        From="0"
        To="1500" 
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:8"/>
        </Storyboard>

        <Storyboard x:Key="pulse2Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulse2"
        Storyboard.TargetProperty="Y"
        From="0"
        To="1500" 
        RepeatBehavior="Forever"
        AutoReverse="False"
        Duration="0:0:8"/>
        </Storyboard>

        <Storyboard x:Key="pulse3Animation">
            <DoubleAnimation
        Storyboard.TargetName="translatePulse3"
        Storyboard.TargetProperty="Y"
