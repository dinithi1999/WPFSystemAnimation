<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Camera\Images\CameraFlashOff.svg" />
    <None Remove="Camera\Images\CameraFlashOn.png" />
    <None Remove="Camera\Images\CameraFlashOn.svg" />
    <None Remove="Lights\Images\CameraFlashOff.svg" />
    <None Remove="Lights\Images\CameraFlashOn.svg" />
    <None Remove="Lights\Images\LightOff.svg" />
    <None Remove="Lights\Images\LightOn.svg" />
    <None Remove="Tank001\Images\BackgroundLightOn.svg" />
    <None Remove="Tank001\Images\CameraFlashOn.svg" />
    <None Remove="Tank001\Images\lighOnEmpty.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Camera\Images\CameraFlashOff.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Camera\Images\CameraFlashOn.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lights\Images\LightOff.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lights\Images\LightOn.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Tank001\Images\BackgroundLightOn.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Tank001\Images\CameraFlashOn.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SharpVectors" Version="1.8.4" />
    <PackageReference Include="SharpVectors.Reloaded" Version="1.8.4" />
    <PackageReference Include="SharpVectors.Reloaded.Cmguo" Version="1.3.0" />
    <PackageReference Include="SharpVectors.Wpf" Version="1.8.4" />
    <PackageReference Include="Svg.Skia" Version="1.0.0.18" />
    <PackageReference Include="SVGImage" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Tank001\Images\lighOnEmpty.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Tank001\TankLevels\" />
  </ItemGroup>

</Project>
