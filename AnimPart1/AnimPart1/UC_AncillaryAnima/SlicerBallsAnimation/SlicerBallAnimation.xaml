<UserControl x:Class="AnimPart1.UC_AncillaryAnima.SlicerBallsAnimation.SlicerBallAnimation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimPart1.UC_AncillaryAnima.SlicerBallsAnimation"
             mc:Ignorable="d" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
            >


    

    <UserControl.Resources>
        <!-- Falling Animation for Red Ball -->
        <Storyboard x:Key="RedBall1FallingAnimation">
            <DoubleAnimation
                Storyboard.TargetName="translateTransformRedBall1"
                Storyboard.TargetProperty="Y"
                From="0"
                To="105" 
                RepeatBehavior="Forever"
                Duration="0:0:2">
            </DoubleAnimation>
        </Storyboard>

        <!-- Falling Animation for Orange Ball -->
        <Storyboard x:Key="FirsrOrangeBallFallingAnimation">
            <DoubleAnimation
                Storyboard.TargetName="translateTransformOrangeBall1"
                Storyboard.TargetProperty="Y"
                From="0"
                To="135" 
                RepeatBehavior="Forever"
                Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- New Ball 1 Animation -->
        <Storyboard x:Key="RedBall2FallingAnimation">
            <DoubleAnimation
                Storyboard.TargetName="translateTransformRedBall2"
                Storyboard.TargetProperty="Y"
                From="0"
                To="105"
                RepeatBehavior="Forever"
                Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="OrangeBallsDroppingOutOfSlicerAnimation">
            <DoubleAnimation
            Storyboard.TargetName="translateTransformDroppingOrangeBall"
            Storyboard.TargetProperty="Y"
            From="0"
            To="50" 
            RepeatBehavior= "Forever"
            Duration="0:0:2">
            </DoubleAnimation>
        </Storyboard>


        <Storyboard x:Key="SecondOrangeBallFallingAnimation">
            <DoubleAnimation
            Storyboard.TargetName="translateTransformOrangeBall2"
            Storyboard.TargetProperty="Y"
            From="0"
            To="125" 
                RepeatBehavior="Forever"
            Duration="0:0:2">
               
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>


