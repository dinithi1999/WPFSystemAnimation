<UserControl x:Class="AnimPart1.Camera.Camera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimPart1.Camera"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" Height="425" Width="225">

    <Canvas x:Name="MainCanvas" 
            RenderTransformOrigin="0.5,0.5" Margin="-2,1,4,0">

        
        <!-- SVG image displayed using SvgViewbox from SharpVectors -->
        <svgc:SvgViewbox x:Name="svgViewbox"
                         Source="pack://application:,,,/UC_AncillaryAnima/Camera/Images/CameraFlashOff.svg"
                         Stretch="Uniform"
                         RenderTransformOrigin="0.5,0.5" Canvas.Left="130" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="-8"/>

        <!-- Transparent button positioned over the SVG image -->
        <Button Canvas.Left="198"
                Width="17"
                Height="16"
                Click="CameraIconCloseBtn_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Style="{StaticResource TransparentButtonStyle}"/>
    </Canvas>


</UserControl>
